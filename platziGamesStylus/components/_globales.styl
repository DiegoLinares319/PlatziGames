Fuente1 = 'Lato', sans-serif
Fuente2 = 'Oswald', sans-serif
color-primario = #333333
color-secundario = #8841da
color-claro = #ffffff

contenedor()
  display: flex
  flex-wrap: wrap
  width: 96%
  margin: 0 auto
  padding: 3rem 0

caja-sombra() 
  background-color: color-claro 
  box-shadow: 0 2rem 3.3rem 0 rgba(0, 0, 0, 0.2)

opacidad(color, cantidad)
  alpha(color, cantidad)

titulo(fuente)
  if fuente == Fuente1
    font-family: Fuente1
  else
    font-family: Fuente2
    font-weight: 600
    text-transform: uppercase

*
  box-sizing: border-box

html
  font-size: 62.5%

body
  margin: 0
  titulo(Fuente1)
  color: color-primario
  font-size: 1.6rem

for header in 3 2 1
  h{header}
    font-size: 3.5rem - (0.5 * header)
    margin: 0